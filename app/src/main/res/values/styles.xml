<resources>

    <!-- MAIN ACTIVITY -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for a Card -->
    <style name="CardStyle">
        <item name="android:layout_width">@dimen/card_width</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:background">@drawable/card_rounded_border</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Style for Image Card -->
    <style name="ImageCardStyle">
        <item name="android:layout_width">@dimen/width_image_card</item>
        <item name="android:layout_height">@dimen/height_image_card</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_image_card</item>
    </style>

    <!-- Style for TextView CARD -->
    <style name="TextViewCardStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <!-- CHILD ACTIVITY -->
    <!-- Style for ListView Child Activity -->
    <style name="ListViewChildActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style for List Item -->
    <style name="ListItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <!-- Style for TextView List Item -->
    <style name="TextViewListItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_marginTop">@dimen/margin_textview</item>
        <item name="android:layout_marginBottom">@dimen/margin_textview</item>
    </style>

    <!-- Style for ImageView List Item -->
    <style name="ImageViewListItemStyle">
        <item name="android:layout_width">@dimen/width_icon_play_music</item>
        <item name="android:layout_height">@dimen/width_icon_play_music</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- Style for Layout content info for a Song, Album or Artist -->
    <style name="LayoutInfoContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <!-- Style for Layout content info for Album or Artist -->
    <style name="LayoutInfoContentStyle.SongItem">
        <item name="android:padding">0dp</item>
    </style>

    <!-- Style for Image Album/Artist -->
    <style name="ImageViewListItemAlbumArtistStyle">
        <item name="android:layout_width">@dimen/width_image_card_album_artist</item>
        <item name="android:layout_height">@dimen/height_image_card_album_artist</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- Style for TextView Other Fields Album/Artist -->
    <style name="TextViewListItemStyle.AlbumArtist">
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style for TextView Other Fields Album/Artist -->
    <style name="TextViewListItemStyle.AlbumArtist.OtherFields">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- ACTIVITY PLAY SONG -->
    <!-- Style for Layout Song -->
    <style name="SongStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style for Layout ImageView Song -->
    <style name="LayoutImageViewSongStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Style for Layout TextView Song -->
    <style name="LayoutTextViewSongStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:background">@color/backgroundLayoutTextViewSong</item>
    </style>

    <!-- Style for ImageView Song -->
    <style name="ImageViewSongStyle">
        <item name="android:layout_width">@dimen/width_icon_song</item>
        <item name="android:layout_height">@dimen/height_icon_song</item>
    </style>

    <!-- Style for TextView Song -->
    <style name="TextViewSongStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextViewSong</item>
        <item name="android:textSize">@dimen/font_size_layout_song</item>
    </style>

</resources>
